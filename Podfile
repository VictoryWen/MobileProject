# Uncomment this line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

target 'MobileProject' do

pod 'Alamofire'          #网络库
pod 'SwiftyJSON'         #JSON解析库
pod 'ReachabilitySwift'
pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3'  #动画库
pod 'SwiftDate', '~> 4.0'#日期
pod 'DynamicColor', '~> 3.2.1' #色彩
pod 'NVActivityIndicatorView' #很好看的Loading动画
pod 'FoldingCell', '~> 2.0.3' #TableViewCell的展开动话

#数据
#pod 'LeanCloud', '~>10.0.0'

#融云IM
pod 'RongCloudIM/IMLib'#, '2.8.2'
pod 'RongCloudIM/IMKit'#, '2.8.2'

# U-Share SDK UI模块（分享面板，建议添加）
pod 'UMengUShare/UI'
# 集成QQ
pod 'UMengUShare/Social/QQ'
# 集成新浪微博
pod 'UMengUShare/Social/Sina'
# 集成微信
pod 'UMengUShare/Social/WeChat'
# 集成邮件
pod 'UMengUShare/Social/Email'
# 集成短信
pod 'UMengUShare/Social/SMS'
#友盟统计
pod 'UMengAnalytics-NO-IDFA' #无IDFA版SDK

#高德地图
pod 'AMap2DMap' #2D地图SDK(2D地图和3D地图不能同时使用)
pod 'AMapSearch' #搜索服务SDK


end

# Uncomment this line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

target ‘MobileProject’ do

pod 'Alamofire'          #网络库
pod 'SwiftyJSON'         #JSON解析库
pod 'ReachabilitySwift'
#pod 'MantleModal'        #view消失（不能更新了）
pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3'  #动画库
pod 'SwiftDate', '~> 4.0'#日期
#pod 'KRProgressHUD'      #HUD （不支持Swift3.0）
pod 'DynamicColor', '~> 3.2.1' #色彩
pod 'NVActivityIndicatorView' #很好看的Loading动画

end
